# --- Test ---
if __name__ == "__main__":
    # Example: test the first question
    q = question_bank[0]
    print("Q:", q.question_text)
    print("Choices:", q.answers)
    answer = input("Your answer: ")
    if q.check_answer(answer):
        print("Correct!")
    else:
        print("Wrong! The correct answer is:", q.correct_answer)



